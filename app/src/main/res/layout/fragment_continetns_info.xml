<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ContinetnsInfoFragment">

    <ImageView
        android:id="@+id/iv_continent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_continent_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_continent"
        app:layout_constraintStart_toStartOf="@id/iv_continent"
        app:layout_constraintEnd_toEndOf="@id/iv_continent"
        tools:text="Continent"/>

    <TextView
        android:id="@+id/continentCities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/popular_cities"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_continent_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/cityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/continentCities"
        app:layout_constraintStart_toStartOf="@id/continentCities"
        tools:text="Bishkek"/>

</androidx.constraintlayout.widget.ConstraintLayout>